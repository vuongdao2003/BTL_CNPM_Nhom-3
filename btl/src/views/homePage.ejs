    <style>.banner-content {
        display: flex;
    }
    
    .main-content {
        flex: 1; /* Take up remaining space */
        margin-right: 20px; /* Adjust margin between main content and hot topics */
    }
    
    .hot-topic-container {
        flex: 1; /* Take up remaining space */
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px; /* Adjust gap between hot topics */
    }
    
    .hot-topic {
        /* Styles for individual hot topics */
    }
    
    .hot-topic img {
        max-width: 100%; /* Ensure images don't exceed their container */
    }
    .content {
    max-height: 100px; /* Example height, adjust as needed */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.hot-topic {
    /* Your styles for hot topics */
    display: flex;
    flex-direction: column;
    border: 1px solid #ccc; /* Example border for hot topics */
    padding: 10px; /* Example padding for hot topics */
}

.hot-topic img {
    max-width: 100%; /* Ensure images don't exceed their container */
    margin-bottom: 10px; /* Example margin between image and content */
}

.hot-topic-content {
    flex: 1; /* Take up remaining space */
}

.hot-topic-content h2 {
    margin-top: 0; /* Remove default margin */
    margin-bottom: 10px; /* Example margin bottom for h2 */
    font-size: 1.5em; /* Example font size for h2 */}

.hot-topic-content p {
    margin-top: 0; /* Remove default margin */
    margin-bottom: 10px; /* Example margin bottom for p */
    font-size: 1em; /* Example font size for p */
    line-height: 1.4; /* Example line height for p */
    overflow: hidden; /* Hide overflow content */
    text-overflow: ellipsis; /* Add ellipsis for overflow text */
    display: -webkit-box;
    -webkit-line-clamp: 3; /* Limit to 3 lines */
    -webkit-box-orient: vertical;
}

    </style>
